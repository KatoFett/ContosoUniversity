@model IEnumerable<BriggsdaleUniversity.Models.SchoolViewModels.EnrollmentDateGroup>

@{
    ViewData["Title"] = "Home";
}

<div id="hero">
    <img src="images/university.jpg" />
    <h1>Briggsdale University</h1>
</div>

<p>Established in 2023, Briggsdale University is a fictitious university that was created by the blood, sweat, and tears of a single student trying to figure out WHY the NuGet package manager keeps complaining.</p>

<h2>Student Body Statistics</h2>

<table>
    <tr>
        <th>
            Enrollment Date
        </th>
        <th>
            Students
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @item.StudentCount
            </td>
        </tr>
    }
</table>

<h2 class="mt-3">Contact Information</h2>
<p>Aaron Fox &bull; <a href="mailto:foxtwo@byui.edu">foxtwo@byui.edu</a></p>

@section Styles{
    <style>
        #hero{
            position: relative;
        }

        #hero > img {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }

        #hero > h1 {
            position: absolute;
            top: 50%;
            text-align: center;
            width: 100%;
            color: white;
            text-shadow: 0px 0px 20px black;
        }
    </style>
}